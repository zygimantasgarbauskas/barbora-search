{
  "name": "Barbora Finder",
  "version": "1.0",
  "description": "Barbora Finder",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage", "contextMenus"],
  "host_permissions": [
    "*://*/*"
  ],
  "commands": {
    "selected-text": {
        "suggested_key": {
        "default": "Alt+W"
        },
        "description": "Invoke Barbora Popup"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "icons": {
	"128": "icon/barbora_logo.png"
  }
}